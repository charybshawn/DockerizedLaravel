user {{ nginx_user }};
worker_processes {{ nginx_worker_processes }};
pid {{ nginx_run_dir }}/nginx.pid;
worker_rlimit_nofile {{ nginx_worker_rlimit_nofile }};

events {
    worker_connections {{ nginx_worker_connections }};
    multi_accept {{ nginx_multi_accept | ternary('on', 'off') }};
    use epoll;
}

http {
    ##
    # Basic Settings
    ##
    sendfile {{ nginx_sendfile | ternary('on', 'off') }};
    tcp_nopush {{ nginx_tcp_nopush | ternary('on', 'off') }};
    tcp_nodelay {{ nginx_tcp_nodelay | ternary('on', 'off') }};
    keepalive_timeout {{ nginx_keepalive_timeout }};
    keepalive_requests {{ nginx_keepalive_requests }};
    types_hash_max_size {{ nginx_types_hash_max_size }};
    server_names_hash_bucket_size {{ nginx_server_names_hash_bucket_size }};
    server_tokens {{ nginx_server_tokens | ternary('on', 'off') }};

    ##
    # MIME Types
    ##
    include {{ nginx_conf_dir }}/mime.types;
    default_type application/octet-stream;

    ##
    # Client Settings
    ##
    client_max_body_size {{ nginx_client_max_body_size }};
    client_body_timeout {{ nginx_client_body_timeout }};
    client_header_timeout {{ nginx_client_header_timeout }};
    send_timeout {{ nginx_send_timeout }};
    client_body_buffer_size 128k;
    client_header_buffer_size 1k;
    large_client_header_buffers 4 4k;

    ##
    # Logging Settings
    ##
    log_format main {{ nginx_access_log_format | to_nice_json }};
    
    access_log {{ nginx_log_dir }}/access.log main;
    error_log {{ nginx_log_dir }}/error.log {{ nginx_error_log_level }};

    ##
    # Gzip Settings
    ##
    gzip {{ nginx_gzip | ternary('on', 'off') }};
    gzip_vary {{ nginx_gzip_vary | ternary('on', 'off') }};
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_min_length 1000;
    gzip_types
{% for type in nginx_gzip_types %}
        {{ type }}{% if not loop.last %}{% endif %}
{% endfor %};

    ##
    # Security Headers (Global)
    ##
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

{% if nginx_rate_limit_enabled %}
    ##
    # Rate Limiting
    ##
    limit_req_zone $binary_remote_addr zone={{ nginx_rate_limit_zone }}:10m rate={{ nginx_rate_limit_requests }};
{% endif %}

    ##
    # SSL Settings (for future use)
    ##
    ssl_protocols {{ nginx_ssl_protocols }};
    ssl_ciphers {{ nginx_ssl_ciphers }};
    ssl_prefer_server_ciphers on;
    ssl_session_cache {{ nginx_ssl_session_cache }};
    ssl_session_timeout {{ nginx_ssl_session_timeout }};

    ##
    # Hide sensitive files
    ##
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }

    ##
    # Performance optimizations for static files
    ##
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|pdf|txt)$ {
        expires 1M;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    ##
    # Include site configurations
    ##
    include {{ nginx_sites_enabled_dir }}/*;
}

