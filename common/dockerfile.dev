FROM serversideup/php:8.3-fpm-nginx

# Switch to root to install packages
USER root

# Accept build args for user mapping
ARG USER_ID=1000
ARG GROUP_ID=1000

# Install dependencies for extensions and development tools
RUN apt-get update && apt-get install -y \
    libicu-dev \
    libexif-dev \
    git \
    unzip \
    curl \
    vim \
    && docker-php-ext-install intl exif bcmath \
    && docker-php-ext-enable xdebug \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js and npm
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs

# Create user with same UID/GID as host user
RUN groupmod -g ${GROUP_ID} www-data \
    && usermod -u ${USER_ID} -g ${GROUP_ID} www-data

# Set working directory
WORKDIR /var/www/html

# Switch to www-data user (now matches host user)
USER www-data

# Note: Dependencies (composer/npm) will be installed at runtime when DB is available