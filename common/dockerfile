FROM serversideup/php:8.3-fpm-nginx

# Switch to root to install packages
USER root

# Install dependencies for extensions
RUN apt-get update && apt-get install -y \
    libicu-dev \
    libexif-dev \
    && docker-php-ext-install intl exif bcmath \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy application files
COPY . /var/www/html

# Set permissions
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache

# Install dependencies (skip scripts to avoid DB connection during build)
RUN composer install --no-dev --optimize-autoloader --no-scripts

# Note: Laravel caching commands will run at container startup when DB is available

# Switch back to www-data user
USER www-data